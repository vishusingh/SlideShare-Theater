{
  "name": "SlideShare Theater",
  "version": "0.0.7",
  "manifest_version": 3,
  "description": "Enter a distraction-free content viewing experience on SlideShare.",
  "background": {
    "service_worker": "eventPage.js",
    "type": "module"
  },
  "icons": {
    "19": "images/19x19.png",
    "38": "images/38x38.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.slideshare.net/*"],
      "js": ["jquery-3.7.1.min.js", "content.js"],
      "css": ["styles.css", "css/animate.css"]
    }
  ],
  "host_permissions": ["*://www.slideshare.net/*"],
  "action": {
    "default_icon": {
      "19": "images/19x19.png",
      "38": "images/38x38.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    },
    "default_title": "Start SlideShare Theater"
  },
  "web_accessible_resources": [
    {
      "resources": ["ss-theater.html", "images/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-ss-theater": {
      "suggested_key": { "default": "Alt+Shift+S" },
      "description": "Toggle SS Theater"
    }
  }
}
